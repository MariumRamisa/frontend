<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".my_app.Activity.question_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        >

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="You"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_anchor="@+id/toolbar_layout"
            app:layout_anchorGravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/arrow"
            app:layout_constraintStart_toEndOf="@+id/arrow"
            app:layout_constraintTop_toTopOf="@+id/arrow" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_backarrow" />

        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile"
            app:layout_constraintStart_toEndOf="@+id/profile"
            app:layout_constraintTop_toTopOf="@+id/profile"
            app:srcCompat="@drawable/ic_next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_height"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginTop="104dp"
            android:text="How tall are you ?"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_height"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            android:entries="@array/height"
            android:background="@drawable/rectangle_shape"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txt_height"
            app:layout_constraintTop_toBottomOf="@+id/txt_height"
            tools:textAlignment="center" />


        <TextView
            android:id="@+id/txt_current_weight"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:text="How much do you weight ?"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_height"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/spinner_height"
            app:layout_constraintTop_toBottomOf="@+id/spinner_height"
            tools:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_current_weight"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:entries="@array/weight"
            android:background="@drawable/rectangle_shape"
            app:layout_constraintEnd_toEndOf="@+id/txt_current_weight"
            app:layout_constraintStart_toStartOf="@+id/txt_current_weight"
            app:layout_constraintTop_toBottomOf="@+id/txt_current_weight"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/txt_goal"
            android:layout_width="313dp"
            android:layout_height="31dp"
            android:layout_marginTop="28dp"
            android:text="What is your goal weight ?"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_current_weight"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/spinner_current_weight"
            app:layout_constraintTop_toBottomOf="@+id/spinner_current_weight"
            tools:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_goal"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:entries="@array/weight"
            android:background="@drawable/rectangle_shape"
            app:layout_constraintEnd_toEndOf="@+id/txt_goal"
            app:layout_constraintStart_toStartOf="@+id/txt_goal"
            app:layout_constraintTop_toBottomOf="@+id/txt_goal"
            tools:textAlignment="center" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="4/5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_goal"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/spinner_goal"
            app:layout_constraintTop_toBottomOf="@+id/spinner_goal" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>