<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".my_app.Activity.DiaryActivity"
    tools:visibility="visible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_constrain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@color/box">

        <TextView
            android:id="@+id/txtview_input_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="3dp"
            android:text="0"
            android:textColor="@color/text_view"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_equal"
            app:layout_constraintStart_toEndOf="@+id/textView_equal"
            app:layout_constraintTop_toTopOf="@+id/textView_equal" />

        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Remaining"
            android:textColor="@color/text_view"
            android:textSize="14sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="@+id/txtview_input_total"
            app:layout_constraintStart_toStartOf="@+id/txtview_input_total"
            app:layout_constraintTop_toBottomOf="@+id/txtview_input_total" />

        <TextView
            android:id="@+id/text_view_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Exercise"
            android:textColor="@color/text_view"
            android:textSize="14sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="@+id/txtview_input_exercise"
            app:layout_constraintStart_toStartOf="@+id/txtview_input_exercise"
            app:layout_constraintTop_toBottomOf="@+id/textView_plus" />

        <TextView
            android:id="@+id/txtview_input_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="0"
            android:textColor="@color/text_view"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_plus"
            app:layout_constraintStart_toEndOf="@+id/textView_plus"
            app:layout_constraintTop_toTopOf="@+id/textView_plus" />

        <TextView
            android:id="@+id/textView_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-light"
            android:text="="
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_input_exercise"
            app:layout_constraintStart_toEndOf="@+id/txtview_input_exercise"
            app:layout_constraintTop_toTopOf="@+id/txtview_input_exercise" />

        <TextView
            android:id="@+id/textView_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-light"
            android:text="+"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_input_food"
            app:layout_constraintStart_toEndOf="@+id/txtview_input_food"
            app:layout_constraintTop_toTopOf="@+id/txtview_input_food" />

        <TextView
            android:id="@+id/text_view_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Food"
            android:textColor="@color/text_view"
            android:textSize="14sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="@+id/txtview_input_food"
            app:layout_constraintStart_toStartOf="@+id/txtview_input_food"
            app:layout_constraintTop_toBottomOf="@+id/txtview_input_food" />

        <TextView
            android:id="@+id/txtview_input_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="0"
            android:textColor="@color/text_view"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_minus"
            app:layout_constraintStart_toEndOf="@+id/textView_minus"
            app:layout_constraintTop_toTopOf="@+id/textView_minus"
            app:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/foodname_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Calories Remaining"
            android:textColor="@color/text_view"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtview_input_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="28dp"
            android:text="1200"
            android:textColor="@color/text_view"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/foodname_txtview"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="@+id/foodname_txtview"
            app:layout_constraintTop_toBottomOf="@+id/foodname_txtview" />

        <TextView
            android:id="@+id/text_view_Goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Goal"
            android:textColor="@color/text_view"
            android:textSize="14sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="@+id/txtview_input_goal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtview_input_goal"
            app:layout_constraintTop_toBottomOf="@+id/txtview_input_goal" />

        <TextView
            android:id="@+id/textView_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="-"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_input_goal"
            app:layout_constraintStart_toEndOf="@+id/txtview_input_goal"
            app:layout_constraintTop_toTopOf="@+id/txtview_input_goal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/below_constrain"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/top_constrain"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="4dp"
        android:background="@color/box"
        app:layout_constraintEnd_toStartOf="@id/bottomAppBar"
        app:layout_constraintStart_toEndOf="@+id/top_constrain">

        <ScrollView
            android:layout_width="411dp"
            android:layout_height="523dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/below_constrain"
            app:layout_constraintTop_toTopOf="@id/below_constrain">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constrain1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

                <LinearLayout
                    android:id="@+id/layout_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/box"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/constrain1"
                    app:layout_constraintTop_toTopOf="@id/constrain1">

                    <TextView
                        android:id="@+id/textView_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Breakfast"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_view"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/breakfast_item"
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/Add_food_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="ADD FOOD"
                        android:textAlignment="textStart"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/box"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/layout_breakfast"
                    app:layout_constraintTop_toBottomOf="@id/layout_breakfast">

                    <TextView
                        android:id="@+id/textView_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Lunch"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_view"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lunch_item"
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/Add_food_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="ADD FOOD"
                        android:textAlignment="textStart"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/layout_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/box"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/layout_lunch"
                    app:layout_constraintTop_toBottomOf="@id/layout_lunch">

                    <TextView

                        android:id="@+id/textView_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Dinner"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_view"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/dinner_item"
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView

                        android:id="@+id/Add_food_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="ADD FOOD"
                        android:textAlignment="textStart"
                        android:textColor="@color/edit_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        android:background="@color/background"
        app:fabCradleVerticalOffset="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNavigationView"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_nav_menu"
            android:background="@drawable/transparent_background"/>

    </com.google.android.material.bottomappbar.BottomAppBar>



</androidx.coordinatorlayout.widget.CoordinatorLayout>