<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".my_app.Activity.question_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        >

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="You"
            android:textAlignment="center"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_anchor="@+id/toolbar_layout"
            app:layout_anchorGravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/arrow"
            app:layout_constraintStart_toEndOf="@+id/arrow"
            app:layout_constraintTop_toTopOf="@+id/arrow" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_backarrow" />

        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile"
            app:layout_constraintStart_toEndOf="@+id/profile"
            app:layout_constraintTop_toTopOf="@+id/profile"
            app:srcCompat="@drawable/ic_next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_marginTop="104dp"
            android:text="Select gender that we should use to calculate your calorie needs:"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/txt_male"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/rectangle_shape"
            android:paddingTop="5dp"
            android:text="Male"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/txt_gender"
            app:layout_constraintTop_toBottomOf="@+id/txt_gender"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/txt_female"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/rectangle_shape"
            android:paddingTop="5dp"
            android:text="Female"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_male"
            app:layout_constraintEnd_toEndOf="@+id/txt_gender"
            app:layout_constraintStart_toEndOf="@+id/txt_male"
            app:layout_constraintTop_toBottomOf="@+id/txt_gender"
            app:layout_constraintVertical_bias="1.0"
            tools:textAlignment="center" />


        <TextView
            android:id="@+id/txt_age"
            android:layout_width="206dp"
            android:layout_height="29dp"
            android:layout_marginTop="28dp"
            android:text="How old are you ?"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_female"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/txt_male"
            app:layout_constraintTop_toBottomOf="@+id/txt_male"
            tools:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_age"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:entries="@array/age"
            android:background="@drawable/rectangle_shape"
            app:layout_constraintEnd_toEndOf="@+id/txt_age"
            app:layout_constraintStart_toStartOf="@+id/txt_age"
            app:layout_constraintTop_toBottomOf="@+id/txt_age"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="206dp"
            android:layout_height="29dp"
            android:layout_marginTop="28dp"
            android:text="Where do you live ?"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_age"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/spinner_age"
            app:layout_constraintTop_toBottomOf="@+id/spinner_age"
            tools:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:entries="@array/location"
            android:background="@drawable/rectangle_shape"
            app:layout_constraintEnd_toEndOf="@+id/txt_location"
            app:layout_constraintStart_toStartOf="@+id/txt_location"
            app:layout_constraintTop_toBottomOf="@+id/txt_location"
            tools:textAlignment="center" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="3/5"
            android:textAlignment="center"
            android:textColor="@color/text_view"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/spinner_location"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/spinner_location"
            app:layout_constraintTop_toBottomOf="@+id/spinner_location" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>