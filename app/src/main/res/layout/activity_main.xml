<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".my_app.Activity.MainActivity"
    tools:visibility="visible">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/background">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeableImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImage"
                    app:srcCompat="@mipmap/ic_profile_round" />

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:fontFamily="sans-serif"
                    android:text="Hi user"
                    android:textColor="@color/text_view"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                    app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
                    app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
                    app:layout_constraintVertical_bias="0.509" />

                <ImageView
                    android:id="@+id/notification_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:contentDescription="TODO"
                    app:layout_constraintBottom_toTopOf="@+id/textView_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ic_notifications" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="269dp"
                    android:layout_height="28dp"
                    android:layout_margin="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/search_background"
                    android:ems="10"
                    app:iconifiedByDefault="false"
                    app:layout_constraintEnd_toEndOf="@+id/textView_name"
                    app:layout_constraintHorizontal_bias="0.043"
                    app:layout_constraintStart_toStartOf="@+id/textView_name"
                    app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"
                    app:queryHint="Search " />


                <!--<EditText
                    android:id="@+id/editTxt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/search_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Search"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="@+id/textView_name"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView_name"
                    app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"

                    />-->


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <TextView
                    android:id="@+id/txtview_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Exercise"
                    android:textColor="@color/text_view"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/exercise_imageView"
                    app:layout_constraintTop_toTopOf="@+id/exercise_imageView" />

                <TextView
                    android:id="@+id/txtview_exercisecalorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="0"
                    android:textColor="@color/text_view"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_exercise"
                    app:layout_constraintStart_toStartOf="@+id/txtview_exercise"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_exercise" />

                <TextView
                    android:id="@+id/txtview_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Food"
                    android:textColor="@color/text_view"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/food_imageView"
                    app:layout_constraintTop_toTopOf="@+id/food_imageView" />

                <TextView
                    android:id="@+id/txtview_foodcalorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="0"
                    android:textColor="@color/text_view"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_food"
                    app:layout_constraintHorizontal_bias="0.482"
                    app:layout_constraintStart_toStartOf="@+id/txtview_food"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_food" />

                <TextView
                    android:id="@+id/txt_view_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Calories"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/text_view"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtview_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Remaining = Goal - Food + Exercise"
                    android:textColor="@color/text_view"
                    android:textSize="9sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txt_view_calorie"
                    app:layout_constraintHorizontal_bias="0.115"
                    app:layout_constraintStart_toStartOf="@+id/txt_view_calorie"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_calorie"
                    app:layout_constraintVertical_bias="0.036" />

                <ImageView
                    android:id="@+id/flag_imageview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    app:layout_constraintStart_toEndOf="@+id/framelayout"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_remaining"
                    app:srcCompat="@drawable/ic_flag" />

                <ImageView
                    android:id="@+id/food_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/flag_imageview"
                    app:layout_constraintStart_toStartOf="@+id/flag_imageview"
                    app:layout_constraintTop_toBottomOf="@+id/flag_imageview"
                    app:srcCompat="@drawable/ic_dining" />

                <ImageView
                    android:id="@+id/exercise_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/food_imageView"
                    app:layout_constraintStart_toStartOf="@+id/food_imageView"
                    app:layout_constraintTop_toBottomOf="@+id/food_imageView"
                    app:srcCompat="@drawable/ic_fire" />

                <TextView
                    android:id="@+id/txtview_basegoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="Base Goal"
                    android:textColor="@color/text_view"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/flag_imageview"
                    app:layout_constraintTop_toTopOf="@+id/flag_imageview" />

                <TextView
                    android:id="@+id/txtview_goalcalorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="1200"
                    android:textColor="@color/text_view"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_basegoal"
                    app:layout_constraintStart_toStartOf="@+id/txtview_basegoal"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_basegoal" />

                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_remaining"
                    app:layout_constraintStart_toStartOf="@+id/txtview_remaining"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_remaining">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:indeterminate="false"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progressbar" />

                    <TextView
                        android:id="@+id/calorie_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0%"
                        android:textAlignment="center"
                        android:textColor="@color/text_view"
                        android:textSize="20sp"
                        android:textStyle="bold">

                    </TextView>

                </FrameLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">


                <LinearLayout
                    android:layout_width="375dp"
                    android:layout_height="144dp"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/box"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txtview_steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="500"
                            android:textAlignment="center"
                            android:textColor="@color/text_view"
                            android:textSize="17sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView_steps"
                            app:layout_constraintHorizontal_bias="0.409"
                            app:layout_constraintStart_toStartOf="@+id/textView_steps"
                            app:layout_constraintTop_toBottomOf="@+id/textView_steps" />

                        <ImageView
                            android:id="@+id/steps_image"
                            android:layout_width="54dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_walk" />

                        <TextView
                            android:id="@+id/textView_steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="Steps"
                            android:textAlignment="center"
                            android:textColor="@color/text_view"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/steps_image"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/steps_image"
                            app:layout_constraintTop_toTopOf="@+id/steps_image" />

                        <ProgressBar
                            android:id="@+id/steps_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="9dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView_steps"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/steps_image"
                            app:layout_constraintTop_toBottomOf="@+id/txtview_steps" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@id/layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@color/box"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/layout"
                        app:layout_constraintTop_toBottomOf="@id/layout">

                        <ImageView
                            android:id="@+id/exercise_image"
                            android:layout_width="24dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="60dp"
                            android:fontFamily="sans-serif"
                            app:layout_constraintBottom_toBottomOf="@+id/textView_exercise"
                            app:layout_constraintStart_toEndOf="@+id/textView_exercise"
                            app:layout_constraintTop_toTopOf="@+id/textView_exercise"
                            app:srcCompat="@drawable/ic_add" />

                        <TextView
                            android:id="@+id/textView_exercise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Exercise"
                            android:textAlignment="center"
                            android:textColor="@color/text_view"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="27dp"
                            android:layout_height="26dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView_exercise"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/textView_exercise"
                            app:layout_constraintTop_toBottomOf="@+id/textView_exercise"
                            app:srcCompat="@drawable/ic_fire" />

                        <TextView
                            android:id="@+id/text_burned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Calories"
                            android:textAlignment="center"
                            android:textColor="@color/text_view"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="@+id/imageView"
                            app:layout_constraintVertical_bias="0.571" />

                        <TextView
                            android:id="@+id/text_cal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="19dp"
                            android:text="500"
                            android:textAlignment="center"
                            android:textColor="@color/text_view"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_burned"
                            app:layout_constraintStart_toEndOf="@+id/text_burned"
                            app:layout_constraintTop_toTopOf="@+id/text_burned"
                            app:layout_constraintVertical_bias="0.25" />

                        <TextView
                            android:id="@+id/textView_cal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:text="cal"
                            android:textAlignment="center"
                            android:textColor="@color/text_view"
                            android:textSize="11sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_cal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/text_cal"
                            app:layout_constraintTop_toTopOf="@+id/text_cal" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

 <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        android:background="@color/background"
        app:fabCradleVerticalOffset="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNavigationView"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_nav_menu"
            android:background="@drawable/transparent_background"/>

    </com.google.android.material.bottomappbar.BottomAppBar>



</androidx.coordinatorlayout.widget.CoordinatorLayout>